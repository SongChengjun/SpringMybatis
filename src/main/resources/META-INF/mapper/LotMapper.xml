<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.carsmart.song.mapper.LotMapper">

    <select id="findById" resultType="Lot">
        SELECT * FROM lot WHERE id=#{id}
    </select>

    <insert id="insert" >
        INSERT INTO lot (id,name,status,startPrice,currentPrice,bidderId,startTime,endTime)
          VALUES (#{id},#{name},#{status},#{start_price},#{current_price},#{bidder_id},#{start_time},#{end_time})
    </insert>

    <update id="updatePrice">
        update lot set
        currentPrice = #{currentPrice},
        bidderId = #{bidderId}
        where id = #{id}
    </update>

    <update id="updateStatus">
        update lot set
        status = #{status}
        where id = #{id}
    </update>

</mapper>